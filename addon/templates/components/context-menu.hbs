<div {{did-insert this.setWormholeTarget}}>
  {{#if this.isActive}}
    <EmberWormhole to="wormhole-context-menu">
      <div class="context-menu-container" style={{this.position}}>
        <ul class="context-menu {{if this.renderLeft 'context-menu--left'}}">
          {{#each this.items as |item|}}
            <ContextMenuItem
              item={{item}}
              amount={{this.selection.length}}
              itemIsDisabled={{this.itemIsDisabled}}
              clickAction={{this.clickAction}}
            />
          {{/each}}
        </ul>
      </div>
    </EmberWormhole>
  {{/if}}
</div>